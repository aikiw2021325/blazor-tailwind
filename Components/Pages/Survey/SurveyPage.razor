@page "/survey/{SurveyId:int}"
@rendermode InteractiveServer
@using BlazorTailwindApp.Models.Entities
@using BlazorTailwindApp.Models.Enums
@using BlazorTailwindApp.Services
@using BlazorTailwindApp.Components.Survey
@inject ISurveyService SurveyService
@inject NavigationManager Navigation

<div class="min-h-screen bg-gray-50">
    <div class="max-w-3xl mx-auto py-8 px-4">
        @if (_survey == null)
        {
            <div class="text-center py-12">
                <p class="text-gray-500">読み込み中...</p>
            </div>
        }
        else
        {
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
                <div class="mb-8">
                    <h1 class="text-2xl font-bold text-gray-900">@_survey.Title</h1>
                    @if (!string.IsNullOrEmpty(_survey.Description))
                    {
                        <p class="mt-2 text-gray-600">@_survey.Description</p>
                    }
                    <div class="mt-4 flex items-center gap-2">
                        <div class="flex-1 bg-gray-200 rounded-full h-2">
                            <div class="bg-blue-600 h-2 rounded-full transition-all duration-300"
                                 style="width: @((_currentStep * 100 / _totalSteps))%"></div>
                        </div>
                        <span class="text-sm text-gray-500">@_currentStep / @_totalSteps</span>
                    </div>
                </div>

                <CascadingValue Value="_answerState">
                    @foreach (var question in _currentQuestions)
                    {
                        <QuestionRenderer Question="question"
                                          ValidationMessage="@GetValidationMessage(question.Id)"
                                          OnAnswerChanged="StateHasChanged" />
                    }
                </CascadingValue>

                <div class="flex justify-between mt-8 pt-6 border-t border-gray-200">
                    @if (_currentStep > 1)
                    {
                        <button type="button"
                                @onclick="PreviousStep"
                                class="px-6 py-2.5 text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors font-medium">
                            戻る
                        </button>
                    }
                    else
                    {
                        <div></div>
                    }

                    @if (_currentStep < _totalSteps)
                    {
                        <button type="button"
                                @onclick="NextStep"
                                class="px-6 py-2.5 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors font-medium">
                            次へ
                        </button>
                    }
                    else
                    {
                        <button type="button"
                                @onclick="Submit"
                                disabled="@_isSubmitting"
                                class="px-6 py-2.5 text-white bg-green-600 rounded-lg hover:bg-green-700 transition-colors font-medium disabled:opacity-50">
                            @(_isSubmitting ? "送信中..." : "登録")
                        </button>
                    }
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public int SurveyId { get; set; }

    private Models.Entities.Survey? _survey;
    private SurveyAnswerState _answerState = new();
    private List<Question> _currentQuestions = [];
    private int _currentStep = 1;
    private int _totalSteps;
    private bool _isSubmitting;
    private Dictionary<int, string> _validationErrors = new();

    protected override async Task OnInitializedAsync()
    {
        _survey = await SurveyService.GetSurveyAsync(SurveyId);
        if (_survey == null) return;

        _totalSteps = await SurveyService.GetTotalStepsAsync(SurveyId);
        await LoadCurrentStep();
    }

    private async Task LoadCurrentStep()
    {
        _currentQuestions = await SurveyService.GetQuestionsForStepAsync(SurveyId, _currentStep);
        _validationErrors.Clear();
    }

    private async Task NextStep()
    {
        if (!ValidateCurrentStep()) return;

        _currentStep++;
        await LoadCurrentStep();
    }

    private async Task PreviousStep()
    {
        _currentStep--;
        await LoadCurrentStep();
    }

    private bool ValidateCurrentStep()
    {
        _validationErrors.Clear();
        var isValid = true;

        foreach (var question in _currentQuestions)
        {
            if (!_answerState.ValidateQuestion(question))
            {
                _validationErrors[question.Id] = "この質問は必須です。";
                isValid = false;
            }
        }

        return isValid;
    }

    private string? GetValidationMessage(int questionId)
    {
        return _validationErrors.TryGetValue(questionId, out var msg) ? msg : null;
    }

    private async Task Submit()
    {
        if (!ValidateCurrentStep()) return;

        _isSubmitting = true;
        try
        {
            var answers = _answerState.ToResponseAnswers();
            await SurveyService.SubmitResponseAsync(SurveyId, answers);
            Navigation.NavigateTo($"/survey/{SurveyId}/complete");
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
